.container.user-page
  %header.user-nav
    .media
      .media-left
        %a{href: "#"}
          %img.media-object{alt: "64x64", "data-holder-rendered" => "true", "data-src" => "holder.js/64x64", src: "#{current_user.avatar.url}", style: "width: 64px; height: 64px;"}/

      .media-body
        %h4#top-aligned-media.media-heading
          =current_user.name
          %span.label.label-default.project-number
            =@prototypes.length
            %i Projects
        .proto-user
          %span.degree we-b inc. Designer
        .row
          .col-md-6
            %h4 Profile
            %p 
              =current_user.profile
          .col-md-6
            %h4 Works
            %p 
              =current_user.work
          .col-md-6
            %a{href: "#{current_user.github}"}
              =current_user.name+'\'Github'
.container.proto-list
  .row
    - @prototypes.each do |prototype|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          %a{href: "/prototypes/#{prototype.id}"}
            = image_tag("#{prototype.captured_images.first.image.url}")
            .caption
              %h3 
                = prototype.title
              .proto-meta
                .proto-date
                  =prototype.created_at.strftime("%Y/%m/%d(#{%w(Sun Mon Tue Wed Thu Fri Sat)[prototype.created_at.wday]})")
              %ul.proto-tag-list.list-inline
                - prototype.tag_list.each do |tag|
                  - tag_id = ActsAsTaggableOn::Tag.find_by(name: tag)
                  %li
                    = link_to tag, tag_path(tag_id),class: "btn btn-default"
.text-center
  %ul.pagination
    %li.disabled
      %a{"aria-label" => "Previous", href: "#"}
        %span{"aria-hidden" => "true"} «
    %li.active
      %a{href: "#"}
        1
        %span.sr-only (current)
    %li
      %a{href: "#"} 2
    %li
      %a{href: "#"} 3
    %li
      %a{href: "#"} 4
    %li
      %a{href: "#"} 5
    %li
      %a{"aria-label" => "Next", href: "#"}
        %span{"aria-hidden" => "true"} »
