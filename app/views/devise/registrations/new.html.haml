.container.user-new
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class: 'container.user-new'}) do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Register
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :name , placeholder: "Username" , style: "background-color:white;"
          .user-image.col-md-2
            %button.btn.btn-primary Add image
            = f.file_field :avatar
          .user-email
            = f.email_field :email, placeholder: "E-Mail", style: "margin-top:20px; background-color:white;"

          .user-password
            = f.password_field :password, placeholder: "Password", style: "margin-top:10px;background-color:white;"
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :member, placeholder: "Member", style: "background-color:white;"
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              %textarea{:name => "profile", :cols => "30", :rows => "4", :placeholder => "Profile", style: "background-color:white;"}
          %h4 Works
          .user-name_image.row
            .user-name.col-md-12
              %textarea{:name => "work", :cols => "30", :rows => "4", :placeholder => "Works", style: "background-color:white;"}
          .row.text-center.user-btn
            .btn.btn-lg.btn-primary.btn-block
              = f.submit

