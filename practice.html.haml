.container
  %form.form-signin
    %h2.form-signin-heading{:action =>'/users/sign_in',:method => "post"} Please sign in
    %label.sr-only{:for => "inputEmail"} Email address
    %input#inputEmail.form-control{:name=> "user[email]", :autofocus => "", :placeholder => "Email address", :required => "", :type => "email"}/
    %label.sr-only{:for => "inputPassword"} Password
    %input#inputPassword.form-control{:name => "user[password]", :placeholder => "Password", :required => "", :type => "password"}/
    .checkbox
      %label
        %input{:type => "checkbox", :value => "remember-me"}/
        Remember me
    %button.btn.btn-lg.btn-primary.btn-block{:name => 'commit', :type => "submit"} Sign in
  .text-center
    %p
      Not a member?
      %a{:href => "/users/sign_up"} Sign up now
